<mvc:View xmlns:core="sap.ui.core"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:l="sap.ui.layout"
          width="100%"
          controllerName="com.winslow.FORMSCARD.Card">
    <List
        id="ProductList"
        items="{myModel>/}" 
        includeItemInSelection="true">
        <CustomListItem>
            <HBox>
                <core:Icon 
                    size="2rem" 
                    src="sap-icon://pdf-attachment" 
                    class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
                <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
				    <Link text="{myModel>name}" wrapping="true" href="{myModel>url}" target="_blank" class="requirementText"/>
                    <Label text="Preview"/> 
                </VBox>
            </HBox>
        </CustomListItem>
    </List>
</mvc:View>